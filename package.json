{
  "private": true,
  "name": "@akashic/playground",
  "version": "1.0.0",
  "description": "",
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/akashic-playground.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run format && run-s build:*",
    "build:webpack": "webpack --config webpack.prod.js",
    "update-engines": "node scripts/update_akashic_versions_json.js",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.{ts,vue}\"",
    "format:eslint": "eslint \"src/**/*.{ts,vue}\" --fix",
    "generate": "run-s generate:*",
    "generate:types": "node scripts/generate_akashic_definitions.js",
    "test": "run-s test:*",
    "test:eslint": "eslint \"src/**/*.{ts,vue}\"",
    "test:unit": "jest",
    "deploy": "npm run build && gh-pages -d public",
    "dev": "webpack serve --config webpack.dev.js",
    "storybook": "start-storybook -s ./public,./stories/fixtures,./src/assets -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@akashic/akashic-engine-standalone": "^3.0.0",
    "@babel/core": "^7.16.5",
    "@mdi/font": "^6.5.95",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/vue": "^6.4.9",
    "@types/file-saver": "^2.0.4",
    "@types/jest": "^27.0.3",
    "@types/sanitize-html": "^2.6.0",
    "@types/url-join": "^4.0.1",
    "@typescript-eslint/parser": "^5.7.0",
    "@vue/composition-api": "^1.4.2",
    "@vue/test-utils": "^1.3.0",
    "axios": "^0.24.0",
    "axios-mock-adapter": "^1.20.0",
    "babel-loader": "^8.2.3",
    "core-js": "^3.20.0",
    "css-loader": "^6.5.1",
    "deepmerge": "^4.2.2",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "file-loader": "^6.2.0",
    "file-saver": "^2.0.5",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.5",
    "js-base64": "^3.7.2",
    "jszip": "^3.7.1",
    "jszip-utils": "^0.1.0",
    "marked": "^4.0.8",
    "monaco-editor": "^0.31.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "prettier": "^2.5.1",
    "raw-loader": "^4.0.2",
    "sass": "~1.32.12",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "url-join": "^4.0.1",
    "vue": "^2.6.14",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.8",
    "vue-router": "^3.5.3",
    "vue-svg-loader": "^0.17.0-beta.2",
    "vue-template-compiler": "^2.6.14",
    "vuetify": "^2.6.1",
    "vuetify-loader": "^1.7.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testURL": "http://localhost/",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  }
}
