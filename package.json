{
  "private": true,
  "name": "@akashic/playground",
  "version": "1.0.0",
  "description": "",
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/akashic-playground.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run format && run-s build:*",
    "build:bundle": "vite build",
    "update-engines": "node scripts/update_akashic_versions_json.js",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"src/**/*.{ts,vue}\" --config prettier.config.json",
    "format:eslint": "eslint \"src/**/*.{ts,vue}\" --fix",
    "generate": "run-s generate:*",
    "generate:types": "node scripts/generate_akashic_definitions.js",
    "test": "run-s test:*",
    "test:eslint": "eslint \"src/**/*.{ts,vue}\"",
    "test:unit": "jest",
    "deploy": "npm run build && gh-pages -d public",
    "dev": "vite dev",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/vue3-vite": "^7.3.2",
    "@types/file-saver": "^2.0.1",
    "@types/jest": "^29.5.4",
    "@types/marked": "^5.0.1",
    "@types/node": "^20.5.7",
    "@types/sanitize-html": "^1.27.0",
    "@types/url-join": "^4.0.0",
    "@typescript-eslint/parser": "^4.3.0",
    "@vitejs/plugin-vue": "^4.3.3",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/vue3-jest": "^29.2.5",
    "axios": "^1.5.0",
    "axios-mock-adapter": "^1.18.2",
    "dts-bundle": "^0.7.3",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-unused-imports": "^0.1.3",
    "eslint-plugin-vue": "^7.0.1",
    "file-saver": "^2.0.2",
    "gh-pages": "^3.1.0",
    "jest": "^29.6.4",
    "js-base64": "^3.5.2",
    "jszip": "^3.5.0",
    "jszip-utils": "^0.1.0",
    "marked": "^7.0.5",
    "material-design-icons-iconfont": "^6.7.0",
    "monaco-editor": "^0.41.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "storybook": "^7.3.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.5",
    "url-join": "^4.0.1",
    "vite": "^4.4.9",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "@vue/vue3-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
