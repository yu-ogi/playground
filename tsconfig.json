{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "vuetify"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "files": [
    "typings/txt-shims.d.ts",
    "typings/vue-shims.d.ts",
    "typings/svg-shims.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./stories/**/*.ts"
  ]
}
